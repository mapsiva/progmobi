<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/row1" android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_size">

        <Button android:id="@+id/b0_0"
            android:textSize="@dimen/btn_text_size"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"/>

        <Button android:id="@+id/b0_1"
            android:layout_margin="2dp"
            android:textSize="@dimen/btn_text_size"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button android:id="@+id/b0_2"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="@dimen/btn_text_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/row2"

        android:layout_width="match_parent"
        android:layout_height="150dp">

        <Button android:id="@+id/b1_0"

            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="@dimen/btn_text_size"
            android:layout_width="wrap_content"/>

        <Button android:id="@+id/b1_1"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="@dimen/btn_text_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button android:id="@+id/b1_2"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="@dimen/btn_text_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <Button android:id="@+id/b2_0"

            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="@dimen/btn_text_size"
            android:layout_width="wrap_content"/>

        <Button android:id="@+id/b2_1"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="@dimen/btn_text_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button android:id="@+id/b2_2"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="@dimen/btn_text_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>